<!DOCTYPE html>
<html>

<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 40px;
        }

        .header {
            display: flex;
            justify-content: space-between;
        }

        .total {
            background: #0ea44c;
            color: white;
            padding: 10px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: 10px;
        }

        th {
            background: #f5f5f5;
        }
    </style>
</head>

<body>

    <div class="header">
        <div>
            <h2>
                <%= company.name %>
            </h2>
            <p>
                <%= company.email %>
            </p>
        </div>
        <div>
            <h3>Invoice <%= invoiceNumber %>
            </h3>
            <p>Due: <%= dueDate %>
            </p>
            <div class="total">Total: €<%= total %>
            </div>
        </div>
    </div>

    <table>
        <tr>
            <th>Item</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Total</th>
        </tr>

        <% items.forEach(item=> { %>
            <tr>
                <td>
                    <%= item.name %>
                </td>
                <td>€<%= item.price %>
                </td>
                <td>
                    <%= item.qty %>
                </td>
                <td>€<%= item.price * item.qty %>
                </td>
            </tr>
            <% }) %>
    </table>

</body>

</html>